{
    "manifest_version": 2,
    "name": "FB Group Leads",
    "version": "1.0.0",
    "description": "Get group leads from fb to google sheet by google forms",
    "icons": {
        "128": "images/icon_128.png"
    },
    "background": {
        "scripts": ["js/back.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/groups/*/member-requests"
            ],
            "js": [
                "js/jquery.js",
                "js/script.js"
            ],
            "run_at": "document_end"
        }
    ],

    "author": "Hasanuzzaman",
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "storage",
        "https://*/facebook.com/*"
    ],
    "short_name": "FBGL"
}